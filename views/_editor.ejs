<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Title">Title</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" name="Title" value="<%= model.Title %>" required pattern=".{1,255}" validationMessage="Title is required and must be between 1 and 255 characters" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Price">Price</label>
  <div class="col-sm-7">
    <input class="form-control" name="Price" value="<%= model.Price %>" type="number" min="0" max="1000000" required validationMessage="Price is required and must be between 0 and 1,000,000" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Description">Description</label>
  <div class="col-sm-10">
    <textarea class="form-control" cols="20" name="Description" maxlength="32000" rows="7" required validationMessage="Description is required"></textarea>
  </div>
</div>
